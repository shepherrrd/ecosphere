{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Ecosphere": "Server=localhost;Database=ecosphere;Port=5432;User Id=postgres;Password=YOUR_DB_PASSWORD;",
    "Redis": "localhost:6379"
  },
  "JwtSettings": {
    "Secret": "YOUR_JWT_SECRET_KEY_CHANGE_THIS_IN_PRODUCTION",
    "ExpiryMinutes": "15",
    "Issuer": "Ecosphere",
    "Audience": "http://localhost:3000"
  },
  "StunTurn": {
    "StunPort": 3478,
    "TurnPort": 3479,
    "TcpTurnPort": 5479,
    "EnableAutoStart": true,
    "SharedSecret": "YOUR_TURN_SHARED_SECRET_CHANGE_THIS_IN_PRODUCTION",
    "CredentialValidityHours": 24,
    "StunUrls": ["stun:127.0.0.1:3478"],
    "TurnUrls": [
      "turn:127.0.0.1:3479?transport=udp",
      "turn:127.0.0.1:5479?transport=tcp"
    ]
  },
  "Metered": {
    "Domain": "YOUR_METERED_DOMAIN.metered.live",
    "SecretKey": "YOUR_METERED_SECRET_KEY",
    "ExpiryInSeconds": 1800
  },
  "SFU": {
    "Enabled": true,
    "Port": 3001,
    "Host": "localhost",
    "AnnouncedIP": "127.0.0.1",
    "RtcMinPort": 40000,
    "RtcMaxPort": 49999,
    "JwtSecret": "YOUR_SFU_JWT_SECRET_KEY_CHANGE_THIS_IN_PRODUCTION"
  }
}
